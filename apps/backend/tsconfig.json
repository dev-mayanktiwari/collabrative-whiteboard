{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["ES2015"],
    "outDir": "./dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
  },
  "exclude": ["node_modules"],
  "include": ["."]
}
