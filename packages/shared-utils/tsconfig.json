{
    "extends": "@repo/typescript-config/base.json",
    "compilerOptions": {
       "target": "es2018",
        "lib": ["es2018", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "declaration": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "outDir": "dist",
    },          
    "exclude": ["node_modules"],
    "include": ["./src"]
}
